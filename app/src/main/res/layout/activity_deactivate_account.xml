<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="@drawable/deactivate_card_background"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_margin="16dp"
        android:scrollbars="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/bin"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#D32F2F"
            android:contentDescription="Warning Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARNING:"
            android:textColor="#D32F2F"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT\nDEACTIVATION"
            android:textColor="#B71C1C"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4sp"
            android:letterSpacing="0.03" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All activity logs and subscriptions will be permanently deleted. This action cannot be undone!"
            android:textColor="#6A1B9A"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="2sp"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to continue?"
            android:textColor="#424242"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:letterSpacing="0.02" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_proceed"
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:text="Proceed"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:rippleColor="#FFCDD2"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            app:backgroundTint="#FFEBEE"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:rippleColor="#FFCDD2" />
    </LinearLayout>
</RelativeLayout>
