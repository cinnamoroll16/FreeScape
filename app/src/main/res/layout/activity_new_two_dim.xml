<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF0D8">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#558B2F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back"
            android:contentDescription="Back"
            app:tint="@android:color/white"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnUndo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/undo"
            android:contentDescription="Undo"
            app:tint="@android:color/white"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/btnRedo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/redo"
            android:contentDescription="Redo"
            app:tint="@android:color/white"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/btnTools"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tools"
            android:contentDescription="Tools"
            app:tint="@color/white"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/btnAbout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ab"
            android:contentDescription="About"
            app:tint="@android:color/white"
            android:layout_marginStart="15dp"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="@android:color/white"
            android:backgroundTint="#33691E"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <!-- 2D Image Map -->
    <ImageView
        android:id="@+id/imageMap2D"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/twod"
        android:contentDescription="2D View"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/instructionArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Tabs -->
    <TextView
        android:id="@+id/instructionArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C8E6C9"
        android:padding="12dp"
        android:text="B-37: Enhance design by removing clutters and adding stone pavers between platforms on the encircled area."
        android:textColor="#2E7D32"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageMap2D" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottomTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E8F5E9"
        app:tabTextColor="#8BC34A"
        app:tabSelectedTextColor="#33691E"
        app:tabIndicatorColor="#33691E"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/instructionArea"
        app:layout_constraintBottom_toTopOf="@id/viewToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vision"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracker"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B-37 ML"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enhance"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- Toggle View Buttons -->
    <LinearLayout
        android:id="@+id/viewToggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#A5D6A7"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn2D"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2D"
            android:backgroundTint="#33691E"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnVIR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="VIR"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
