<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".NewTutorialsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="WebViewLayout">

        <!-- Header with back arrow and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                app:tint="#2E7D32"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutorials"
                android:textColor="#1B5E20"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- VIP Member Profile Card using CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:background="#7CB342">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#2E7D32"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/darra"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘‘ VIP Member\nAdriana Lorenz R."
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Active"
                        android:textColor="#C5E1A5"
                        android:textStyle="italic"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvPerks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perks: Full Feature Access"
                        android:textColor="#C5E1A5"
                        android:textStyle="italic"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TO1 Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO1: How to create a workspace"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1B5E20"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#4CAF50"
            tools:ignore="WebViewLayout" />

        <!-- TO2 Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO2: Proper Planning and Design"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1B5E20"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <WebView
            android:id="@+id/webView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#4CAF50" />

    </LinearLayout>
</ScrollView>
