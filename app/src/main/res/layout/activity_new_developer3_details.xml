<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".NewDeveloper2Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header title -->
        <TextView
            android:id="@+id/titleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textColor="#2E7D32"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/title_rounded_green_border"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Main Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E8F5E9"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/darra"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile Picture"
                    android:layout_marginBottom="16dp" />

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sandarra Dumanacal"
                    android:textColor="#2E7D32"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Course -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bachelor of Science in Information Technology"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp" />

                <!-- Skill -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skill: Emotional Intelligence"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp" />

                <!-- Team Vision -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Vision"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="United by passion, driven by innovation, and committed to excellenceâ€”our team transforms challenges into opportunities, ideas into reality, and goals into victories. Together, we create, inspire, and lead the way to a brighter future!"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <!-- Fun Facts -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spending habits reflects my personality in many ways."
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Done Button -->
        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DONE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E7D32" />
    </LinearLayout>
</ScrollView>
