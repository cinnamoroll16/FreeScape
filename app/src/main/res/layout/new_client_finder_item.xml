<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="#558B2F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#7CB342"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/client_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            app:tint="@color/white"
            android:contentDescription="Client Icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/client_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 001"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/client_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment: Landscape Designer"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/client_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: (+63) 9012341558"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="86pt"
        android:background="#7CB342"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/client_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            app:tint="@color/white"
            android:contentDescription="Client Icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/client_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 003"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/client_assignment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment: Landscape Designer"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/client_contact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: (+63) 9012341558"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="43pt"
        android:padding="12dp"
        android:background="#7CB342"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/client_icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            app:tint="@color/white"
            android:contentDescription="Client Icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/client_id3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 002"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/client_assignment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment: Landscape Designer"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/client_contact3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: (+63) 9012341558"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
