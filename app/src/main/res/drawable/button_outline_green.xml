<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#89AC46" /> <!-- light gray background on press -->
            <stroke android:width="2dp" android:color="#696969" /> <!-- darker gray border -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#696969" /> <!-- default outline gray -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
